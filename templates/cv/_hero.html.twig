<section class="overflow-hidden bg-gray-50 sm:grid sm:grid-cols-2 sm:items-center">
	<div class="p-8 md:p-12 lg:px-16 lg:py-24">
		<div class="mx-auto max-w-xl text-center ltr:sm:text-left rtl:sm:text-right">
			<h2 class="text-2xl font-bold text-gray-900 md:text-3xl">
				{{ cv.basics.name }}
			</h2>

			<p class="hidden text-gray-500 md:mt-10 md:block">
				{{ cv.basics.summary }}
			</p>

	<section class="mt-10">
	<div class="space-y-2 mx-auto max-w-3xl text-center">
		<h2 class="text-3xl font-bold sm:text-4xl"></h2>
		{% for work in cv.work %}
			<article class="rounded-xl bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 p-0.5 shadow-xl transition">
				<div class="rounded-[10px] bg-gray-100 p-4 dark:bg-gray-900 sm:p-6">
					<p class="block text-xs text-gray-500 dark:text-gray-400">
						{{ work.startDate }}
						to
						{{ work.endDate }}
					</p>
					<a href="#">
						<h3 class="mt-0.5 text-lg font-medium text-gray-900 dark:text-white">
							{{ work.position }} at {{ work.company }}
						</h3>
					</a>
				</div>
			</article>
		{% endfor %}
	</div>
</section>

			<div class="mt-4 md:mt-8">
				<a href="#" class="inline-block rounded bg-emerald-600 px-12 py-3 text-sm font-medium text-white transition hover:bg-emerald-700 focus:outline-none focus:ring focus:ring-yellow-400">
					Contact me!
				</a>
			</div>
		</div>
	</div>
			


	<img alt="" src="{{ cv.basics.image }}" 
	class="h-full w-full object-cover sm:h-[calc(100%_-_2rem)] 
	sm:self-end sm:rounded-ss-[30px] md:h-[calc(100%_-_4rem)] md:rounded-ss-[60px]"/>

</section>